{
    "include": [
        "src", // 会编译src目录下的所有文件，包括子目录
    ],
    "compilerOptions": {
        "target": "es6", // 指定ECMAScript目标版本
        "module": "commonjs", // 指定模块化类型
        "declaration": true, // 生成 `.d.ts` 文件
        "outDir": "./dist", // 编译后生成的文件目录
        "baseUrl": "./",
        "paths": {
            "*" : ["types/*"]
        },
    }
}
